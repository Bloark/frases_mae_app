<%- include('../common/header')%>

        <%- include('../common/menu')%>

        <main class="form-signin">
            <form action="/admin/autenticar" method="POST">
                <h1 class="mb-3 text-center">
                    Login
                </h1>

                <div class="form-floating">
                    <input type="text" class="form-control" name="usuario"
                    autocomplete="off" placeholder="Usuário" id="usuario"
                    required>
                    <label for="usuario">Usuário</label>
                </div>
                <div class="form-floating">
                    <input type="password" class="form-control" name="senha" placeholder="Senha" id="senha" placeholder="Senha" required>
                    <label for="senha">Senha</label>
                </div>

                <button type="submit" class="btn btn-outline-secondary btn-lg w-100">Entrar</button>
            </form>
        </main>

<%- include('../common/footer')%>