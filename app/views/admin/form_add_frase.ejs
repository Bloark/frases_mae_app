<%- include('../common/header')%>

        <%- include('../common/menu')%>
        
        <main class="mb-auto mt-auto">
            <div class="container mt-auto">
            <div class="container d-flex">
                
                <img id=""src="/img/img_icone.png" alt="Icone" class="logo2 pl-4">
                <h1 class="mb-0">Lista de Frases</h1>

            </div>
            

            <form action="/admin/salvar-frase" method="POST">
                <input type="text" name="frase" placeholder="Digite a frase" autocomplete=off class="form-control mt-4 mb-2">
                <input type="submit" value="Adicionar" class="btn btn-secondary" style="width: 100%"> 
              </form>
          
              <hr>          
              <ul class="list-group list-group-flush">
                  <% frases.forEach(frase=>{%>

                    <li class="list-group-item d-flex" ><%=frase.frase %><a href="/frase?id=<%=frase.id_frase %>" class="ms-auto">❌</a>
                    
                    </li>
                  
                  <%})%>
                
                
              </ul>
            </div>
        </main>
        

<%- include('../common/footer')%>